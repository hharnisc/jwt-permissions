{
  "name": "jwt-permissions",
  "version": "0.0.1",
  "description": "A permissions layer built on top of jsonwebtokens",
  "main": "./lib/index.js",
  "files": [
    "lib/",
    "src/"
  ],
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.7.5",
    "babel-eslint": "^6.0.2",
    "babel-jest": "^12.0.2",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-register": "^6.7.2",
    "eslint": "^2.7.0",
    "eslint-config-airbnb": "^7.0.0",
    "eslint-plugin-jsx-a11y": "^0.6.2",
    "eslint-plugin-react": "^4.3.0",
    "jest-cli": "^12.0.2",
    "nodemon": "^1.9.1"
  },
  "scripts": {
    "start": "node .",
    "build": "./node_modules/babel-cli/bin/babel.js src --out-dir lib",
    "lint": "./node_modules/eslint/bin/eslint.js src/* test/*",
    "test": "npm run lint && npm run test:jest",
    "test:jest": "./node_modules/jest-cli/bin/jest.js",
    "test:watch": "./node_modules/nodemon/bin/nodemon.js -w src -w test -w __mocks__ -e js -x npm run test",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hharnisc/jwt-permissions"
  },
  "keywords": [
    "jwt,jsonwebtokens,permissions,roles,auth"
  ],
  "author": {
    "name": "Harrison Harnisch",
    "email": "hharnisc@gmail.com",
    "url": "https://hharnisc.github.io"
  },
  "homepage": "https://github.com/hharnisc/jwt-permissions",
  "jest": {
    "testDirectoryName": "test",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "license": "MIT"
}
